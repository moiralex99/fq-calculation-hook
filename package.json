{
  "name": "directus-extension-realtime-calc",
  "version": "1.0.0",
  "description": "Extension Directus pour calculs en temps réel sur la même fiche - Simple et rapide",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-hook",
    "calculated-fields",
    "real-time",
    "formulas"
  ],
  "type": "module",
  "directus:extension": {
    "type": "bundle",
    "host": "^11.0.0",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "entries": [
      {
        "type": "hook",
        "name": "realtime-calc-hook",
        "source": "src/index.js"
      },
      {
        "type": "endpoint",
        "name": "realtime-calc",
        "source": "src/endpoint.js"
      }
    ]
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w",
    "link": "directus-extension link",
    "test": "node test.js",
    "recalc:all": "node scripts/recalc-all.mjs",
    "recalc:collection": "node scripts/recalc-collection.mjs",
    "test:e2e": "node scripts/setup-e2e-tests.mjs",
    "clean:duplicates": "node scripts/remove-duplicate-formulas.mjs"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "^11.0.0"
  },
  "dependencies": {
    "directus-extension-schema-management-module": "^2.0.1",
    "mathjs": "^12.0.0"
  }
}
